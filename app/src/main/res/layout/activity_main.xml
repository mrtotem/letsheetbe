<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/notes_sheet"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/background_light"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/start_listening_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/notes_sheet"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:background="@color/colorPrimary"
        android:text="Write!!"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/tap_tempo_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/notes_sheet"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/start_listening_button"
        android:background="@color/colorPrimary"
        android:text="TAP TEMPO"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/end_listening_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/start_listening_button"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        android:text="Stop!!"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tap_tempo_label"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/tap_tempo_button"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/end_listening_button"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@android:color/black" />
</RelativeLayout>